Content-Type: application/json

{
  "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE3MjY4OTQwMzIsImV4cCI6MTcyNzQ5ODgzMn0.sHud6IEP98cXeHqfTxsC1H2c8VGc3ITVnH_aQ31KK1A"
