// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public", "auth"]
}

// 사용자 기본 정보
model User {
  id         String   @id @default(uuid())  // 사용자 고유 ID (UUID)
  username   String   @unique                // 사용자명 (중복 불가)
  email      String   @unique                // 이메일 (중복 불가)
  role       Role     @default(USER)         // 사용자 권한 (USER/OWNER)
  
  created_at DateTime @default(now())        // 계정 생성일
  updated_at DateTime @updatedAt              // 계정 수정일
  
  // 관계
  auth          Auth?
  posts         Post[]
  comments      Comment[]
  post_likes    PostLike[]
  comment_likes CommentLike[]
  
  @@index([email])
  @@index([username])
  @@schema("public")
  @@map("users")
}

// 인증 정보 (분리)
model Auth {
  id            String   @id @default(uuid())  // 인증 정보 ID
  user_id       String   @unique                // 연결된 사용자 ID (1:1)
  
  // 로컬 인증
  password_hash String?                         // 비밀번호 해시 (bcrypt)
  
  // OAuth 인증 (선택사항)
  provider      String?                         // OAuth 제공자 (google, github 등)
  provider_id   String?                         // OAuth 제공자의 사용자 ID
  
  // 토큰 관리
  access_token  String?  @db.Text              // JWT 액세스 토큰
  refresh_token String?  @db.Text              // JWT 리프레시 토큰
  
  created_at    DateTime @default(now())        // 생성일
  updated_at    DateTime @updatedAt              // 수정일
  
  // 관계
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  @@unique([provider, provider_id])
  @@index([user_id])
  @@schema("auth")
  @@map("auth")
}

// 게시글
model Post {
  id            String    @id @default(uuid())  // 게시글 고유 ID
  title         String                          // 제목
  slug          String    @unique               // URL 경로 (고유)
  content       String    @db.Text              // 본문 (Markdown/HTML)
  excerpt       String?   @db.Text              // 요약/발췌문
  cover_image   String?                         // 커버 이미지 URL
  
  published     Boolean   @default(false)       // 공개 여부 (false=임시저장)
  is_deleted    Boolean   @default(false)       // 삭제 여부 (soft delete)
  
  view_count    Int       @default(0)           // 조회수
  like_count    Int       @default(0)           // 좋아요 수
  comment_count Int       @default(0)           // 댓글 수
  
  author_id     String                          // 작성자 ID
  category_id   String?                         // 카테고리 ID (nullable)
  
  published_at  DateTime?                       // 최초 공개일
  deleted_at    DateTime?                       // 삭제일
  created_at    DateTime  @default(now())        // 생성일
  updated_at    DateTime  @updatedAt              // 수정일
  
  // 관계
  author        User         @relation(fields: [author_id], references: [id], onDelete: Cascade)
  category      Category?    @relation(fields: [category_id], references: [id], onDelete: SetNull)
  tags          Tag[]
  comments      Comment[]
  post_likes    PostLike[]
  
  // 단일 인덱스
  @@index([author_id])
  @@index([category_id])
  @@index([slug])
  @@index([is_deleted])
  
  // 복합 인덱스 (자주 사용하는 쿼리 조합)
  @@index([published, created_at])           // 공개글 최신순 조회
  @@index([author_id, published])            // 특정 작성자의 공개글
  @@index([category_id, published])          // 특정 카테고리의 공개글
  @@index([is_deleted, published])           // 삭제되지 않은 공개글
  
  @@schema("public")
  @@map("posts")
}

// 카테고리
model Category {
  id          String   @id @default(uuid())  // 카테고리 ID
  name        String   @unique               // 카테고리명 (중복 불가)
  slug        String   @unique               // URL 경로 (고유)
  description String?                        // 설명
  color       String?                        // UI 색상 코드 (예: #3B82F6)
  icon        String?                        // 아이콘 이름 또는 URL
  order       Int      @default(0)           // 정렬 순서
  is_deleted  Boolean  @default(false)       // 삭제 여부
  
  post_count  Int      @default(0)           // 게시글 수 (캐싱)
  
  deleted_at  DateTime?                      // 삭제일
  created_at  DateTime @default(now())        // 생성일
  updated_at  DateTime @updatedAt              // 수정일
  
  // 관계
  posts       Post[]
  
  @@index([slug])
  @@index([order])
  @@index([is_deleted])
  @@index([is_deleted, order])  // 삭제되지 않은 카테고리 정렬 순서대로 조회
  @@schema("public")
  @@map("categories")
}

// 태그
model Tag {
  id         String   @id @default(uuid())  // 태그 ID
  name       String   @unique               // 태그명 (중복 불가)
  slug       String   @unique               // URL 경로 (고유)
  color      String?                        // UI 색상 코드
  is_deleted Boolean  @default(false)       // 삭제 여부
  
  post_count Int      @default(0)           // 게시글 수 (캐싱)
  
  deleted_at DateTime?                      // 삭제일
  created_at DateTime @default(now())        // 생성일
  updated_at DateTime @updatedAt              // 수정일
  
  // 관계
  posts      Post[]
  
  @@index([slug])
  @@index([name])
  @@index([is_deleted])
  @@index([is_deleted, post_count])  // 삭제되지 않은 인기 태그 조회
  @@schema("public")
  @@map("tags")
}

// 댓글 (Self-Referencing으로 답글 지원)
model Comment {
  id         String    @id @default(uuid())  // 댓글 ID
  content    String    @db.Text              // 댓글 내용
  
  post_id    String                          // 게시글 ID
  author_id  String                          // 작성자 ID
  parent_id  String?                         // 부모 댓글 ID (NULL=댓글, 값=답글)
  
  is_deleted Boolean   @default(false)       // 삭제 여부
  deleted_at DateTime?                       // 삭제일
  like_count Int       @default(0)           // 좋아요 수
  
  created_at DateTime  @default(now())        // 생성일
  updated_at DateTime  @updatedAt              // 수정일
  
  // 관계
  post           Post          @relation(fields: [post_id], references: [id], onDelete: Cascade)
  author         User          @relation(fields: [author_id], references: [id], onDelete: Cascade)
  parent         Comment?      @relation("CommentReplies", fields: [parent_id], references: [id], onDelete: Cascade)
  replies        Comment[]     @relation("CommentReplies")
  comment_likes  CommentLike[]
  
  // 단일 인덱스
  @@index([post_id])
  @@index([author_id])
  @@index([parent_id])
  @@index([is_deleted])
  
  // 복합 인덱스
  @@index([post_id, is_deleted, created_at])  // 특정 게시글의 삭제되지 않은 댓글 조회
  @@index([author_id, is_deleted])            // 특정 사용자의 삭제되지 않은 댓글
  
  @@schema("public")
  @@map("comments")
}

// 게시글 좋아요
model PostLike {
  id         String   @id @default(uuid())  // 좋아요 ID
  user_id    String                          // 사용자 ID
  post_id    String                          // 게시글 ID
  created_at DateTime @default(now())        // 좋아요 누른 시간
  
  // 관계
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  
  @@unique([user_id, post_id])
  @@index([post_id, created_at])  // 특정 게시글의 최근 좋아요 조회
  @@index([user_id, created_at])  // 특정 사용자의 최근 좋아요 조회
  @@schema("public")
  @@map("post_likes")
}

// 댓글 좋아요
model CommentLike {
  id         String   @id @default(uuid())  // 좋아요 ID
  user_id    String                          // 사용자 ID
  comment_id String                          // 댓글 ID
  created_at DateTime @default(now())        // 좋아요 누른 시간
  
  // 관계
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  comment    Comment  @relation(fields: [comment_id], references: [id], onDelete: Cascade)
  
  @@unique([user_id, comment_id])
  @@index([comment_id, created_at])  // 특정 댓글의 최근 좋아요 조회
  @@index([user_id, created_at])     // 특정 사용자의 최근 좋아요 조회
  @@schema("public")
  @@map("comment_likes")
}

// 사용자 권한 (Enum)
enum Role {
  USER   // 일반 사용자
  OWNER  // 블로그 소유자 (관리자)
  
  @@schema("public")
}
