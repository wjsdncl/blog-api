// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 사용자 기본 정보
model User {
  id         String   @id @default(uuid())
  username   String   @unique
  email      String   @unique
  role       Role     @default(USER)
  
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  // 관계
  auth          Auth?
  posts         Post[]
  comments      Comment[]
  post_likes    PostLike[]
  comment_likes CommentLike[]
  
  @@index([email])
  @@index([username])
  @@map("users")
}

// 인증 정보 (분리)
model Auth {
  id            String   @id @default(uuid())
  user_id       String   @unique
  
  // 로컬 인증
  password_hash String?
  
  // OAuth 인증 (선택사항)
  provider      String?  // google, github 등
  provider_id   String?  // OAuth provider의 user ID
  
  // 토큰 관리
  refresh_token String?  @db.Text
  
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  
  // 관계
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  @@unique([provider, provider_id])
  @@index([user_id])
  @@map("auth")
}

// 게시글
model Post {
  id            String    @id @default(uuid())
  title         String
  slug          String    @unique
  content       String    @db.Text
  excerpt       String?   @db.Text
  cover_image   String?
  
  published     Boolean   @default(false)
  featured      Boolean   @default(false)
  is_deleted    Boolean   @default(false)
  
  view_count    Int       @default(0)
  like_count    Int       @default(0)
  comment_count Int       @default(0)
  
  author_id     String
  category_id   String?
  
  published_at  DateTime?
  deleted_at    DateTime?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  
  // 관계
  author        User         @relation(fields: [author_id], references: [id], onDelete: Cascade)
  category      Category?    @relation(fields: [category_id], references: [id], onDelete: SetNull)
  tags          Tag[]
  comments      Comment[]
  post_likes    PostLike[]
  
  // 단일 인덱스
  @@index([author_id])
  @@index([category_id])
  @@index([slug])
  @@index([is_deleted])
  
  // 복합 인덱스 (자주 사용하는 쿼리 조합)
  @@index([published, created_at])           // 공개글 최신순 조회
  @@index([published, featured, created_at]) // 주요 공개글 조회
  @@index([author_id, published])            // 특정 작성자의 공개글
  @@index([category_id, published])          // 특정 카테고리의 공개글
  @@index([is_deleted, published])           // 삭제되지 않은 공개글
  
  @@map("posts")
}

// 카테고리
model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String?  // UI 색상 (예: #3B82F6) - 애플리케이션에서 정규식 검증 필수
  icon        String?  // 아이콘 이름 또는 URL
  order       Int      @default(0)
  is_deleted  Boolean  @default(false)
  
  post_count  Int      @default(0)
  
  deleted_at  DateTime?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  
  // 관계
  posts       Post[]
  
  @@index([slug])
  @@index([order])
  @@index([is_deleted])
  @@index([is_deleted, order])  // 삭제되지 않은 카테고리 정렬 순서대로 조회
  @@map("categories")
}

// 태그
model Tag {
  id         String   @id @default(uuid())
  name       String   @unique
  slug       String   @unique  // 애플리케이션에서 URL-safe 검증 필수
  color      String?  // UI 색상 - 애플리케이션에서 정규식 검증 필수
  is_deleted Boolean  @default(false)
  
  post_count Int      @default(0)
  
  deleted_at DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  // 관계
  posts      Post[]
  
  @@index([slug])
  @@index([name])
  @@index([is_deleted])
  @@index([is_deleted, post_count])  // 삭제되지 않은 인기 태그 조회
  @@map("tags")
}

// 댓글 (Self-Referencing으로 답글 지원)
model Comment {
  id         String    @id @default(uuid())
  content    String    @db.Text
  
  post_id    String
  author_id  String
  parent_id  String?   // NULL이면 댓글, 값 있으면 답글
  
  is_deleted Boolean   @default(false)
  deleted_at DateTime?
  like_count Int       @default(0)
  
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  
  // 관계
  post           Post          @relation(fields: [post_id], references: [id], onDelete: Cascade)
  author         User          @relation(fields: [author_id], references: [id], onDelete: Cascade)
  parent         Comment?      @relation("CommentReplies", fields: [parent_id], references: [id], onDelete: Cascade)
  replies        Comment[]     @relation("CommentReplies")
  comment_likes  CommentLike[]
  
  // 단일 인덱스
  @@index([post_id])
  @@index([author_id])
  @@index([parent_id])
  @@index([is_deleted])
  
  // 복합 인덱스
  @@index([post_id, is_deleted, created_at])  // 특정 게시글의 삭제되지 않은 댓글 조회
  @@index([author_id, is_deleted])            // 특정 사용자의 삭제되지 않은 댓글
  
  @@map("comments")
}

// 게시글 좋아요
model PostLike {
  id         String   @id @default(uuid())
  user_id    String
  post_id    String
  created_at DateTime @default(now())
  
  // 관계
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  
  @@unique([user_id, post_id])
  @@index([post_id, created_at])  // 특정 게시글의 최근 좋아요 조회
  @@index([user_id, created_at])  // 특정 사용자의 최근 좋아요 조회
  @@map("post_likes")
}

// 댓글 좋아요
model CommentLike {
  id         String   @id @default(uuid())
  user_id    String
  comment_id String
  created_at DateTime @default(now())
  
  // 관계
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  comment    Comment  @relation(fields: [comment_id], references: [id], onDelete: Cascade)
  
  @@unique([user_id, comment_id])
  @@index([comment_id, created_at])  // 특정 댓글의 최근 좋아요 조회
  @@index([user_id, created_at])     // 특정 사용자의 최근 좋아요 조회
  @@map("comment_likes")
}

// Enum
enum Role {
  USER
  OWNER
}
